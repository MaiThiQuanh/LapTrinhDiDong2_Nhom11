<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activitydangnhap"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FFCF40"
    tools:context=".activity.DangNhapActivity">


    <TextView
        android:gravity="center"
        android:textSize="30dp"
        android:text="ĐĂNG NHẬP"
        android:textStyle="bold"
        android:textColor="#101F72"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageRotate"
            android:padding="6dp"
            app:srcCompat = "@drawable/running"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
    </FrameLayout>

    <EditText
        android:id="@+id/edttextuser"
        android:layout_marginBottom="40dp"
        android:hint="Nhập tên người dùng"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
    </EditText>

    <EditText
        android:id="@+id/edttextpassword"
        android:layout_marginBottom="40dp"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="30dp"
            android:id="@+id/buttondangky"
            android:text="ĐĂNG KÝ"
            android:textStyle="bold"
            android:background="@drawable/spinner_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:id="@+id/buttondangnhap"
            android:text="ĐĂNG NHẬP"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:background="@drawable/spinner_button"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>
    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/buttonthoat"
        android:text="THOÁT"
        android:background="@drawable/spinner_button"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>

</LinearLayout>